@article{Awuni2026RegVC,
  abbr={Working Paper},
  title={Regulatory Complexity and Corporate Venture Capital},
  author={Awuni, Mathias},
  year={2026},
  journal={Working Paper},
  selected={true},
  abstract={I examine how regulatory fragmentation affects corporate venture capital (CVC) investment. Using firm-level measures of regulatory fragmentation for active CVC investors, I document a robust non-monotonic relationship: moderate fragmentation reduces investment frequency by 25.6% relative to low fragmentation, while effects attenuate at extreme levels. This deterrence operates independently of regulatory intensity, volume, and topic breadth, isolating coordination complexity as the primary friction. The mechanism is a fixed coordination cost: fragmentation reduces deal count but increases average deal size, indicating a “flight to quality” where firms abandon marginal investments. High-R&D firms uniquely mitigate these costs through absorptive capacity; this adaptation is driven by organizational capabilities rather than financial slack, as cash-rich but low-innovation firms fail to adapt. These patterns emerged post-2010, following the Dodd-Frank expansion of regulatory oversight.}
}

